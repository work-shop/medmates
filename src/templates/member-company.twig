{% extends "member.twig" %}

{% block member_details %}
  {% if post.development_stage %}
    <div>
      {{ post.get_field("development_stage").label }}
    </div>
  {% endif %}

  {% if post.number_of_employees %}
    <div>
      {{ post.number_of_employees }} Employees
    </div>
  {% endif %}

  {% if post.get_field("address") %}
    <address class="mt3">
      {{ post.get_field("address") }}
    </address>
  {% endif %}
{% endblock %}

{% block member_contact %}
    <section class="mb5">
      {% include "components/title.twig" with { "content": "Contact" } %}

      <div>
        {{ post.contact_name }}
      </div>

      {% if post.get_field('contact_email') %}
        <div>
          <a href="mailto:{{ post.get_field('contact_email') }}">{{ post.get_field('contact_email') }}</a>
        </div>
      {% endif %}

      {% if post.contact_phone_number %}
        <div>
          {{ post.contact_phone_number }}
        </div>
      {% endif %}
    </section>
{% endblock %}
