<article class="flex measure-wide mb4">
  {% if member.avatar %}
    <div class="mr3">
      <a href="{{ member.link }}">
        <img class="db" src="{{ member.avatar(112) }}" width="112" height="112" alt="">
      </a>
    </div>
  {% endif %}

  <div>
    <h1 class="mb3 f4 f3-m fw6 lh-title">
      <a href="{{ member.link }}">{{ member.display_name }}</a>
    </h1>

    {% if member.company_affiliation or member.professional_title or member.job_functions %}
      <div>
        {% if member.company_affiliation %}
          <div class="f6 fw6 ttu tracked gray">
            {{ member.company_affiliation }}
          </div>
        {% endif %}

        {% if member.professional_title %}
          <div class="f6 fw6 ttu tracked gray">
            {{ member.professional_title }}
          </div>
        {% endif %}

        {% if member.job_functions %}
          <div class="f6 fw6 ttu tracked gray">
            {{ member.job_functions }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</article>
