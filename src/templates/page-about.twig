{% extends "base.twig" %}

{% block content %}
  <article class="measure-wide">
    <section class="mb4">
      <h1 class="mb3 f3 f2-m fw6 lh-title green">
        Mission
      </h1>

      <div>
        {{ page.content }}
      </div>
    </section>

    {% if page.what_we_do %}
      <section class="mb4">
        <h1 class="mb3 f3 f2-m fw6 lh-title green">
          What We Do
        </h1>

        <div>
          {{ page.what_we_do }}
        </div>
      </section>
    {% endif %}
    </section>

    {% if page.history %}
      <section class="mb4">
        <h1 class="mb3 f3 f2-m fw6 lh-title green">
          History
        </h1>

        <div>
          {{ page.history }}
        </div>
      </section>
    {% endif %}
  </article>
{% endblock %}
