{% extends "page.twig" %}

{% block content %}
  <article>
    {% if page.content %}
      <section class="mw7 mb4">
        <h1 class="mb3 f3 f2-m fw6 lh-title green">
          Mission
        </h1>

        <div>
          {{ page.content }}
        </div>
      </section>
    {% endif %}

    {% if page.what_we_do %}
      <section class="mw7 mb4">
        <h1 class="mb3 f3 f2-m fw6 lh-title green">
          What We Do
        </h1>

        <div>
          {{ page.what_we_do }}
        </div>
      </section>
    {% endif %}
    </section>

    {% if page.history %}
      <section class="mw7 mb4">
        <h1 class="mb3 f3 f2-m fw6 lh-title green">
          History
        </h1>

        <div>
          {{ page.history }}
        </div>
      </section>
    {% endif %}
