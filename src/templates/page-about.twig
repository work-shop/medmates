{% extends "page.twig" %}

{% block content %}
  <article>
    {% if page.content %}
      <section class="mw7 mb4">
        {% include "components/title.twig" with {"content": "Mission"} %}

        <div>
          {{ page.content }}
        </div>
      </section>
    {% endif %}

    {% if page.what_we_do %}
      <section class="mw7 mb4">
        {% include "components/title.twig" with {"content": "What We Do"} %}

        <div>
          {{ page.what_we_do }}
        </div>
      </section>
    {% endif %}
    </section>

    {% if page.history %}
      <section class="mw7 mb4">
        {% include "components/title.twig" with {"content": "History"} %}

        <div>
          {{ page.history }}
        </div>
      </section>
    {% endif %}
  </article>
{% endblock %}
