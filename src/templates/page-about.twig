{% extends "page.twig" %}

{% block content %}
  <article>
    {% if post.content %}
      <section class="mw7 mb4">
        {% include "components/title.twig" with { "content": "Mission" } %}

        <div>
          {{ post.content }}
        </div>
      </section>
    {% endif %}

    {% if post.what_we_do %}
      <section class="mw7 mb4">
        {% include "components/title.twig" with { "content": "What We Do" } %}

        <div>
          {{ post.what_we_do }}
        </div>
      </section>
    {% endif %}
    </section>

    {% if post.history %}
      <section class="mw7 mb4">
        {% include "components/title.twig" with { "content": "History" } %}

        <div>
          {{ post.history }}
        </div>
      </section>
    {% endif %}
  </article>
{% endblock %}
