{% extends "base.twig" %}

{% block content %}
  <article class="measure-wide">
    <div class="flex-m mb4">
      <img class="dib mb3 mb0-m" src="{{ member.avatar(248) }}" width="248" height="248" alt="">

      <div class="ml3-m">
        <div class="f6 fw6 ttu tracked gray">{{ member.company_affiliation }}</div>
        <div class="f6 fw6 ttu tracked gray">{{ member.professional_title }}</div>
        <div class="f6 fw6 ttu tracked gray">{{ member.job_functions }}</div>

        {% if member.facebook_link or member.twitter_link or member.linkedin_link %}
          <div class="">
            {% if member.facebook_link %}
              <a href="{{ member.facebook_link }}" target="_blank">Facebook</a>
            {% endif %}

            {% if member.twitter_link %}
              <a href="{{ member.twitter_link }}" target="_blank">Twitter</a>
            {% endif %}

            {% if member.linkedin_link %}
              <a href="{{ member.linkedin_link }}" target="_blank">LinkedIn</a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>

    <div>{{ member.description | wpautop }}</div>
  </article>
{% endblock %}
