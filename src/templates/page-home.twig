{% extends "page.twig" %}

{% block header_title %}
  {{ site.description }}
{% endblock %}

{% block content %}
  <section class="mb5">
    {{ parent() }}
  </section>

  <section>
    {% include "components/title.twig" with { "content": "Latest News" } %}

    {% for post in posts %}
      <div class="mw7 mb4">
        {% include ["components/teaser-" ~ post.post_type ~ ".twig", "components/teaser.twig"] %}
      </div>
    {% endfor %}
  </section>
{% endblock %}
