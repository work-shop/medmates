{% extends "page.twig" %}

{% block header_title %}
  {{ site.description }}
{% endblock %}

{% block page_content %}
  <section class="mb5">
    <div class="flex-l nb5-l">
      <div class="order-1 mw6-m mw5-l mb5">
        <div class="flex items-baseline">
          <div class="flex-auto">
            {% include "components/title.twig" with { "content": "Events" } %}
          </div>

          <a class="lh-title" href="{{ site.link }}/events">View More</a>
        </div>

        <div id="calendar" class="mini"></div>
      </div>

      <div class="order-0 mb4 mr5-l">
        <div class="mb4">
          {% include "components/title.twig" with { "content": "Latest News" } %}
        </div>

        {% include "components/posts-list.twig" %}
      </div>
    </div>
  </section>
{% endblock %}
