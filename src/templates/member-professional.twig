{% extends "member.twig" %}

{% block member_details %}
  {% if post.company_affiliation %}
    <div>
      {{ function("get_userdata", post.company_affiliation).display_name }}
    </div>
  {% endif %}

  {% if post.job_title %}
    <div>
      {{ post.job_title }}
    </div>
  {% endif %}

  {% if post.job_functions %}
    <div>
      {{ post.job_functions }}
    </div>
  {% endif %}
{% endblock %}

{% block member_contact %}
  {% if post.user_email or post.phone_number %}
    <section class="mb5">
      {% include "components/title.twig" with { "content": "Contact Information" } %}

      {% if post.user_email %}
        <div>
          <a href="mailto:{{ post.user_email }}">{{ post.user_email }}</a>
        </div>
      {% endif %}

      {% if post.phone_number %}
        <div>
          {{ post.phone_number }}
        </div>
      {% endif %}
    </section>
  {% endif %}
{% endblock %}
