{% set pagination = pagination|default(posts.pagination) %}
{% set pagination_name = pagination_name|default("Page") %}

{% if pagination.prev or pagination.next %}
  <nav>
    {% if pagination.prev %}
      <span class="nowrap {% if pagination.prev and pagination.next %} mr4 {% endif %}">
        <a href="{{ pagination.prev.link }}">◄ Previous {{ pagination_name }}</a>
      </span>
    {% endif %}

    {% if pagination.next %}
      <span class="nowrap">
        <a href="{{ pagination.next.link }}">Next {{ pagination_name }} ►</a>
      </span>
    {% endif %}
  </nav>
{% endif %}
