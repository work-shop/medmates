{% if posts.pagination.prev or posts.pagination.next %}
  <nav class="mv4 mv5-m">
    {% if posts.pagination.prev %}
      <span class="{% if posts.pagination.prev and posts.pagination.next %} mr3 {% endif %}">
        <a href="{{ posts.pagination.prev.link }}">Previous Page</a>
      </span>
    {% endif %}

    {% if posts.pagination.next %}
      <span>
        <a href="{{ posts.pagination.next.link }}">Next Page</a>
      </span>
    {% endif %}
  </nav>
{% endif %}
