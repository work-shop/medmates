{% extends "components/teaser-member.twig" %}

{% block member_details %}
  {% if post.company_affiliation or post.job_title or post.job_functions %}
    <div>
      {% if post.company_affiliation %}
        <div>
          {{ function("get_userdata", post.company_affiliation).display_name }}
        </div>
      {% endif %}

      {% if post.job_title %}
        <div>
          {{ post.job_title }}
        </div>
      {% endif %}

      {% if post.job_functions %}
        <div>
          {{ post.job_functions }}
        </div>
      {% endif %}
    </div>
  {% endif %}
{% endblock %}
