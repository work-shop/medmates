<article>
  <h1 class="mb3 f4 f3-m fw6 lh-title">
    <a href="{{ post.link }}">{{ post.title }}</a>
  </h1>

  <div class="mb3">
    {% set metadata = "Posted " ~ post.post_date_gmt | time_ago ~ "by " ~ post.author %}
    {% include "components/metadata.twig" with { "content": metadata } %}
  </div>

  {% if post.get_thumbnail %}
    <a href="{{ post.link }}"><img class="db" src="{{ post.thumbnail.src }}"></a>
  {% endif %}

  <p>
    {{ post.preview }}
  </p>
</article>
